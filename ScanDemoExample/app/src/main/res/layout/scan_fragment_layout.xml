<?xml version="1.0" encoding="utf-8"?>
<com.scanner.demo.scanlibrary.scan.ScanLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scanLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scanBottomLayout"
        android:layout_alignParentBottom="true"
        layout="@layout/scan_fragment_bottom_layout"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/scanBottomLayout"
        android:layout_gravity="center"
        >

        <FrameLayout
            android:id="@+id/sourceFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/scanPadding"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sourceImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true" />
        </FrameLayout>

        <com.scanner.demo.scanlibrary.PolygonView
            android:id="@+id/polygonView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>


</com.scanner.demo.scanlibrary.scan.ScanLayout>